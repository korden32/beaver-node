extends layout

block content
	form(
		action = "/"
		method = "post"
		enctype = "application/x-www-form-urlencoded"
	)
		.left-panel
			.hostname!= hostname

			input(
				type = "submit"
				name = "logout"
				value = "Logout"
			)
			input(
				type = "submit"
				name = "submit"
				disabled = true
			)

			.errors

			a(href="/monitor-result.txt")!= 'Monitor last result'

			fieldset
				legend
					!= 'Hosts'
				.buttons
					button.all!= 'All'
					button.invert!= 'Invert'
					button.reset!= 'Reset'
				hr
				.hosts


		input(
			type = "hidden"
			name = "config"
		)
		pre#editor
